<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>bookstore.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>edu.ncu.ricardowang.myListener.myServletListener</listener-class>
    </listener>
    <listener>
        <listener-class>edu.ncu.ricardowang.myListener.mySessionListener</listener-class>
    </listener>
    <resource-ref>
        <description>DB Connextion</description>
        <res-ref-name>jdbc/BookDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>